---
interface Props {
  title: string;
  descr: string;
  img: string;
  uri: string;
  idx: number;
}

const { title, descr, img, idx, uri } = Astro.props;
---

<div
  id={"pj-" + (idx + 1)}
  style="transform: translateY(200px); opacity: 0"
  class={`bg-[#223148] rounded-md overflow-hidden h-fit mb-6 2k:mb-10 ${
    idx % 2
      ? "lg:w-[calc(40%-12px)] 2k:w-[calc(40%-20px)] lg:ml-auto"
      : "2k:w-[calc(60%-20px)] lg:w-[calc(60%-12px)] lg:float-left"
  }`}
>
  <div class="group relative overflow-hidden cursor-pointer">
    <img
      class="hover:scale-105 duration-300 ease-in-out"
      src={img}
      alt={title}
    />
    <a
      href={uri}
      target="_blank"
      class="font-rubik hover:underline underline-offset-2 text-white duration-300 backdrop-blur-md flex items-center gap-3 absolute group-hover:bottom-0 -bottom-full py-4 w-full justify-end pr-6"
      >View project<img src="/assets/r-arrow.svg" alt="learn more" />
    </a>
  </div>
  <h3
    class="font-poppins text-white text-xl sm:text-2xl font-medium mb-3 px-8 mt-4 sm:mt-6"
  >
    {title}
  </h3>
  <p class="px-8 text-slate-200 font-rubik mb-4 sm:mb-6 text-lg sm:text-xl">
    {descr}
  </p>
</div>
<script></script>
